{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Vite: React (Docker)",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/app/client"
        },
        {
            "name": "FastAPI (Docker)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/app/server",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": true
        }
    ]
}
